function homestead() {
    if [ "$1" == "init" ]; then
        git clone https://github.com/laravel/homestead.git ~/Code/homestead
    elif [ "$1" == "edit" ]; then
        nano ~/.homestead/Homestead.yaml
    elif [ "$1" == "rebuild" ]; then
        ( cd ~/Code/homestead && vagrant destroy -f && vagrant up && vagrant ssh; cd - > /dev/null )
    else
        ( cd ~/Code/homestead && vagrant $*; cd - > /dev/null )
    fi
}

function hs() {
	homestead $*
}

_homestead()
{
    local cur=${COMP_WORDS[COMP_CWORD]}
    COMPREPLY=( $(compgen -W "box connect destroy global-status halt help init login package plugin port powershell push rdp reload resume share snapshot ssh ssh-config status suspend up version" -- $cur) )
}

complete -F _homestead homestead

