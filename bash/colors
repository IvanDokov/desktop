function colors () {
    clear

    for x in 0 1 4 5 7 8; do 
        for i in `seq 30 37`; do 
            echo -ne "\e[$x;${i}m\\\e[$x;${i}m\e[0;37m "

            for a in `seq 40 47`; do 
                echo -ne "\e[$x;$i;${a}m\\\e[$x;$i;${a}m\e[0;37m "
            done
            echo
        done
    done
    
    echo ""
}